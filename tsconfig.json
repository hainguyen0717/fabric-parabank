{
  "compilerOptions": {
    "target": "ES2021", // Specify ECMAScript target version
    "module": "CommonJS", // Specify module code generation
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "moduleResolution": "node", // Resolve modules using Node.js resolution
    "outDir": "dist", // Output directory for compiled files
    "rootDir": ".", // Root directory of the source files
    "resolveJsonModule": true, // Allow importing JSON files
    "types": ["node", "playwright"], // Include Playwright and Node.js types
    "lib": ["ES2021", "DOM"] // Include DOM and ES2021 libraries
  },
  "include": [
    "tests/**/*.ts", // Include all test files
    "pages/**/*.ts", // Include all page object files
    "libs/**/*.ts", // Include all library files
    "tests/ui/create.user.spec.ts1"
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    "dist", // Exclude compiled output
    "playwright-report", // Exclude Playwright reports
    "test-results" // Exclude test results
  ]
}
